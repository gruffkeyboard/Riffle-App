{
  "compilerOptions": {
    "target": "ES2017", 
    "module": "esnext",  
    "jsx": "react-native", 
    "lib": ["esnext", "dom"],
    "strict": true,
    "allowJs": true, 
    "moduleResolution": "node", 
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": "./",
    "paths": {
      "*": ["types/*"]
    },
    "resolveJsonModule": true, 
    "isolatedModules": true, 
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": true 
  },
  "include": ["app/**/*.ts", "app/**/*.tsx", "./"],
  "exclude": ["./node_modules"],
  "ts-node": {
    "files": true
  },
}
